<tab name="syncPluginTab" text="SMSSync" icon="/icons/basicplugin_logo_large.png">
	<panel columns="1" weightx="1" weighty="1" gap="15" top="9" right="9" bottom="9" left="9">
	
		<panel name="pnlSettings" columns="1" weightx="1" border="true" text="i18n.plugin.sync.settings" gap="10" top="5" right="5" bottom="5" left="5">
			<panel columns="2" weightx="1" gap="10" top="5" left="5" bottom="5" right="5">
				<label text="Synchronisation URL" width="50"/>
				<textfield name="txtSynchronisationURL" weightx="1" columns="300" text="http://"/>
			</panel>
			
			<!-- items to include -->
			<panel columns="4" halign="left" weightx="1" gap="10" top="5" left="5" bottom="5" right="5">
				<label text="i18n.sentence.you.can.include" />
				<button name="btnSenderName" icon="/icons/sender.png" text="i18n.common.message.sender.name" action="addSenderNameParameter(txtSynchronisationURL)" />
				<button name="btnSenderNumber" icon="/icons/sender_number.png" text="i18n.common.message.sender.number" action="addSenderNumberParameter(txtSynchronisationURL)" />
				<button name="btnMessageContent" icon="/icons/message.png" text="i18n.common.message.content" action="addMessageContentParameter(txtSynchronisationURL)" />
			</panel>
			<!-- /items to include -->
					
			<!-- auto start up checkbox -->
			<checkbox name="chkStartAutomatically" text="i18n.plugin.sync.start.automatically" />
			<!-- /auto start up checkbox-->
		</panel>
		
		<!-- synchronisation log -->
		<panel columns="1" border="true" weightx="1" weighty="1" gap="10" top="5" right="5" bottom="5" left="5">
			<table name="tblSychronisationLog" weightx="1" weighty="1">
				<header>
					<column text="Synchronisation Request" width="700"/>
					<column text="Status"/>
				</header>
			</table>
		</panel>
		<!-- /synchronisation log -->
		
		<panel columns="1" weightx="1" halign="right" gap="10" top="5" right="5" bottom="5" left="5">
			<button name="btnClear" icon="/icons/clear.png" text="i18n.action.clear" />
		</panel>
		
	</panel>	
</tab>